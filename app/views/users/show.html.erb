<h1><%= @user.full_name %></h1>

<div class="row">
  <div class="col-sm-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="panel-title">Bookmarks</div>
      </div>
      <table class="table">
        <!-- <thead> -->
        <!--   <th>Bookmark</th> -->
        <!--   <th>Type</th> -->
        <!--   <th>Remove</th> -->
        <!-- </thead> -->
        <tbody>
          <% @user.bookmarks.each do |bookmark| %>
            <tr>
              <td>
                <%= link_to bookmark.bookmarkable.name, bookmark.bookmarkable %>
              </td>
              <td>
                <%= bookmark.bookmarkable.class %>
              </td>
              <td>
                <%= button_to "Unbookmark", bookmark, class: 'btn btn-primary', method: :delete %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
